@model WebAppMVC5.Models.MailInfo

@{
    ViewBag.Title = "Index";

    string msg = "";
    string alert = "";

    if (ViewBag.Error != null)
    {
        msg = ViewBag.Error;
        alert = "alert-danger";
    }
    else if (ViewBag.Success != null)
    {
        msg = ViewBag.Success;
        alert = "alert-success";
    }
}

<h2>Index</h2>
<div class="form-group">
    <div class="alert @alert">@msg</div>
</div>
