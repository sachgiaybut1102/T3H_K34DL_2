@*@model List<WebAppMVC5.Models.MailInfo>*@

@*Trong trường hợp mà ta dùng nhiều ObjectInfo,
    ta có thể using luôn Models vào đó*@
@using WebAppMVC5.Models

@model List<MailInfo>

@{
    ViewBag.Title = "Mail";
}

<h2>@ViewBag.Title</h2>

<table class="table table-sm table-hover table-striped">
    <thead>
        <tr>
            <th>To</th>
            <th>Subject</th>
            <th>Content</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var mail in Model)
        {
            <tr>
                <td>@mail.To</td>
                <td>@mail.Subject</td>
                <td>@mail.Content</td>
            </tr>
        }
    </tbody>
</table>

