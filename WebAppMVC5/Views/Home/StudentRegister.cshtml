@model WebAppMVC5.Models.Student

@{
    ViewBag.Title = "StudentRegister";
}

<h2>StudentRegister</h2>
<div>
    @Html.ValidationSummary(true)
    <div>
        @using (Html.BeginForm("ConfirmStudentRegister", "Home", FormMethod.Post))
        {
            <div class="form-group">
                <label class="fw-bold">ID</label>
                @Html.TextBoxFor(model => model.ID, htmlAttributes: new { @class = "form-control", @autofocus = "autofocus" })
                @Html.ValidationMessageFor(model => model.ID, "", htmlAttributes: new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label class="fw-bold">Họ tên</label>
                @Html.TextBoxFor(model => model.Name, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Name, "", htmlAttributes: new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label class="fw-bold">Giới tính</label>
                @Html.DropDownListFor(model => model.Gender, ViewBag.Gender as SelectList, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Gender, "", htmlAttributes: new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label class="fw-bold">Ngày sinh</label>
                <input type="date" id="DateOfBirth" name="DateOfBirth" class="form-control" value="@Model.DateOfBirth.ToString("yyyy-MM-dd")" />
                @Html.ValidationMessageFor(model => model.DateOfBirth, "", htmlAttributes: new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label class="fw-bold">EMail</label>
                @Html.TextBoxFor(model => model.EMail, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.EMail, "", htmlAttributes: new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label class="fw-bold">Nhập lại Email</label>
                @Html.TextBoxFor(model => model.ConfirmEMail, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ConfirmEMail, "", htmlAttributes: new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label class="fw-bold">Số điện thoại</label>
                @Html.TextBoxFor(model => model.PhoneNumber, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PhoneNumber, "", htmlAttributes: new { @class = "text-danger" })
            </div>
            <hr />
            <button type="submit" class="btn btn-success">Tạo</button>
            @Html.AntiForgeryToken()
        }
    </div>
</div>
