@model WebSales.Models.EF.Category

@{
    ViewBag.Title = "Create";
}

<div class="card container shadow col-md-6 col-12">
    <div class="card-body">
        <h2>Chi tiết</h2>

        <div class="form-horizontal">
            <h4>Loại sản phẩm</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ID)

            <div class="form-group">
                <label class="control-label font-weight-bold">Tên tiếng Anh</label>
                <div class="form-group">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label font-weight-bold">Tên tiếng Việt</label>
                <div class="form-group">
                    @Html.EditorFor(model => model.NameVN, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.NameVN, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group text-right">
                @Html.ActionLink("Chỉnh sửa", "Edit", new { ID = Model.ID }, htmlAttributes: new { @class = "btn btn-warning border-dark" })
                @Html.ActionLink("Quay lại", "Index", null, htmlAttributes: new { @class = "btn btn-default border-dark" })
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
