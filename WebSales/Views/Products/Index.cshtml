@using PagedList

@model IPagedList<WebSales.Models.EF.Product>

@{
    ViewBag.Title = "Index";
}

<div class="card shadow">
    <div class="card-body">
        <h2>Sản phẩm</h2>

        @Html.Partial("IndexParitalView\\CreateAndFind")
        <table class="table">
            <tr>
                <th>
                    Tên sản phẩm
                </th>
                <th>
                    Tên loại sản phẩm
                </th>
                <th>
                    Đơn giá
                </th>
                <th>
                    Ngày sản xuất
                </th>
                <th>
                    Hình ảnh
                </th>
                <th>
                    Tình trạng
                </th>
                <th>
                    Chú thích
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UnitPrice)
                    </td>
                    <td>
                        @item.ProductDate.ToString("dd/MM/yyyy")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Image)
                    </td>
                    <td>
                        @{
                            string cssClass = item.Available ? "btn-success" : "btn-danger";
                            string content = item.Available ? "Còn bán" : "Ngừng bán";
                        }
                        <button class="btn btn-block btn-sm @cssClass border-dark">@content</button>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>

                    <td class="text-nowrap" width="1px">
                        @Html.Partial("IndexParitalView\\TableFeature", item.ID)
                    </td>
                </tr>
            }

        </table>
        @Html.Partial("IndexParitalView\\PagedList", Model)
    </div>
</div>

@section css{
    <link href="~/Content/PagedList.css" rel="stylesheet" />
}