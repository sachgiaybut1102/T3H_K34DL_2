@using (Html.BeginForm())
{
    <div class="d-flex">
        <div>
            @Html.ActionLink("Thêm mới", "Create", null, htmlAttributes: new { @class = "btn btn-sm btn-success" })
        </div>
        <div class="form-group form-inline ml-auto">
            <input id="keyword" name="keyword" class="form-control mr-3" placeholder="Nhập vào từ khóa cần tìm" value="@ViewBag.Keyword" />
            <button type="submit" class="btn btn-sm btn-primary">Tìm kiếm</button>
        </div>
    </div>
}